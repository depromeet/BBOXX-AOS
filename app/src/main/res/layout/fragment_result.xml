<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:clickable="true">



        <com.depromeet.bboxx.presentation.utils.CustomTopView
            android:id="@+id/cl_top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="79dp"
            android:textSize="24sp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textColor="@color/gray_10"
            android:text="부끄럼쟁이 딸기야,\n 좀 후련해졌어?"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="너는 소중한 사람이니까 행복해지면 좋겠어."
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/gray_6"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_main_text" />


        <ImageView
            android:layout_width="252dp"
            android:layout_height="250dp"
            android:layout_marginTop="244dp"
            android:background="@drawable/ic_feeling_note_complete"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/bt_go_to_decibel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="17dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_result_btn"
            android:gravity="center"
            android:text="소리치기"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bt_go_to_home" />

        <TextView
            android:id="@+id/bt_go_to_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="30dp"
            android:paddingVertical="17dp"
            android:background="@drawable/bg_result_btn"
            android:backgroundTint="@color/gray_10"
            android:gravity="center"
            android:text="홈으로"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/bt_go_to_decibel"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_speech_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_10"
            app:layout_constraintBottom_toTopOf="@id/bt_go_to_decibel"
            android:backgroundTint="@color/black"
            android:text="아직도 기분이 별로야?\n소리 질러 해소해 봐"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintLeft_toLeftOf="@id/bt_go_to_decibel"
            app:layout_constraintRight_toRightOf="@id/bt_go_to_decibel"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_black"
            app:layout_constraintTop_toBottomOf="@id/tv_speech_bubble"
            android:backgroundTint="@color/black"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            app:layout_constraintLeft_toLeftOf="@id/bt_go_to_decibel"
            app:layout_constraintRight_toRightOf="@id/bt_go_to_decibel"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>